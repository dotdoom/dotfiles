#!/bin/bash

# Music synchronized operation script

MUSDIR=/home/music/
MUSSRV=d522w4

function enforce_permissions() {
	#chown -R artem:users "$MUSDIR"
	chmod -R u=rwX,g=rX,o= "$MUSDIR"
}

if [[ "$1" == "up" ]]; then
	enforce_permissions
	rsync -avzup --delete $MUSDIR $MUSSRV:$MUSDIR
else
	rsync -avzup --delete $MUSSRV:$MUSDIR $MUSDIR
	enforce_permissions
fi
