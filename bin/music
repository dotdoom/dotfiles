#!/bin/bash

# Music synchronized operation script

MUSDIR=/home/music/

function enforce_permissions() {
	#chown -R artem:users "$MUSDIR"
	chmod -R u+rwX,g+rX,o-rwx "$MUSDIR"
}

if [[ "$1" == "up" ]]; then
	enforce_permissions
	rsync -avzup --delete $MUSDIR d522w0:$MUSDIR
else
	rsync -avzup --delete d522w0:$MUSDIR $MUSDIR
	enforce_permissions
fi
