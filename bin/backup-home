#!/bin/sh

/bin/tar -cp \
	--exclude="$HOME/pkg" \
	--exclude="$HOME/tmp" \
	--exclude="$HOME/Android/Sdk" \
	--exclude="$HOME/Downloads" \
	--exclude="$HOME/.android/avd" \
	--exclude="$HOME/.cache" \
	--exclude="$HOME/.wine" \
	--exclude="$HOME/.gvfs" \
	--exclude="$HOME/.npm" \
	--exclude="$HOME/.gem" \
	--exclude="$HOME/.pub-cache" \
	--exclude="$HOME/.bundle" \
	--exclude="$HOME/.dartServer" \
	--exclude="$HOME/.local/share/Trash" \
	--exclude="$HOME/.config/google-chrome" \
	--exclude="$HOME/.config/chrome-remote-desktop" \
	--exclude="$HOME/.config/Code" \
	--exclude="$HOME/.vscode" \
	--exclude="$HOME/.AndroidStudio*" \
	--exclude="$HOME/.config/gzdoom" \
	--exclude="$HOME/VirtualBox VMs" \
	--exclude="$HOME/.vagrant.d" \
	--exclude="$HOME/.platformio" \
	--exclude="$HOME/.vscode-server" \
	--exclude=build \
	--exclude=.gradle \
	--exclude=node_modules \
	--exclude=bower_components \
	"$HOME"
