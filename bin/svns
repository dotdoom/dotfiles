#!/bin/bash

pushd ~/netmri || exit 1

ACTION=${1:-up}
REPOS='skipjack/skipjack_trunk skipjack/skipjack netcordia-tools netmri-rpm/trunk'

for repo in $REPOS; do
	echo '============================================================================='
	echo $repo
	echo '============================================================================='
	svn st $repo
	echo "$ACTION"
	echo '-----------------------------------------------------------------------------'
	svn $ACTION $repo
done

popd
